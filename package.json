{
  "name": "github-desktop-linux",
  "version": "1.0.0",
  "description": "Modern GitHub Desktop alternative for Linux with AI-powered features",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run start\" \"npm run watch\"",
    "watch": "webpack --watch --mode development",
    "build": "webpack --mode production",
    "package": "electron-builder",
    "package:linux": "electron-builder --linux"
  },
  "keywords": [
    "git",
    "github",
    "desktop",
    "linux",
    "electron",
    "version-control"
  ],
  "author": "GitHub Desktop Linux Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^19.2.3",
    "concurrently": "^8.0.0",
    "css-loader": "^6.0.0",
    "electron": "^39.2.7",
    "electron-builder": "^24.0.0",
    "html-webpack-plugin": "^5.0.0",
    "style-loader": "^3.0.0",
    "ts-loader": "^9.0.0",
    "typescript": "^5.0.0",
    "webpack": "^5.0.0",
    "webpack-cli": "^5.0.0"
  },
  "dependencies": {
    "react": "^18.0.0",
    "react-dom": "^19.2.3",
    "simple-git": "^3.0.0"
  },
  "build": {
    "appId": "com.githubdesktoplinux.app",
    "productName": "GitHub Desktop Linux",
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development"
    }
  }
}
